# Stripe Express Marketplace Configuration for WeOut
# Copy this to your .env file and fill in your actual values

# IMPORTANT: These are the ADMIN/PLATFORM Stripe account credentials
# Only ONE Stripe account is needed - the platform account
# Hosts will create Express accounts connected to this main account

# Stripe API Keys (Get from https://dashboard.stripe.com/apikeys)
# These belong to the ADMIN/PLATFORM account
STRIPE_SECRET_KEY=sk_test_your_platform_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_platform_stripe_publishable_key_here

# Stripe Webhook Secret (Get from https://dashboard.stripe.com/webhooks)
# This is used to verify webhook signatures from Stripe
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5  # Default 5% commission (deducted automatically)
STRIPE_CURRENCY=USD        # Default currency

# Webhook URLs (Update with your domain)
STRIPE_WEBHOOK_URL=https://your-domain.com/stripe/webhook
STRIPE_RETURN_URL=https://your-domain.com/onboarding/success
STRIPE_REFRESH_URL=https://your-domain.com/onboarding/refresh

# Database URL (if not already set)
DATABASE_URL="postgresql://username:password@localhost:5432/weout_db"

# Marketplace Settings
STRIPE_MARKETPLACE_NAME="WeOut Event Platform"
STRIPE_MARKETPLACE_SUPPORT_EMAIL="support@weout.com"
